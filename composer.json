{
  "name": "everaccounting/wp-ever-accounting",
  "version": "1.0.4",
  "description": "WordPress Accounting plugin for small business!",
  "homepage": "https://wpeveraccounting.com",
  "type": "wordpress-plugin",
  "license": "GPL-3.0-or-later",
  "prefer-stable": true,
  "minimum-stability": "dev",
  "keywords": [
	"wordpress",
	"plugin"
  ],
  "authors": [
	{
	  "name": "wpeveraccounting",
	  "email": "support@wpeveraccounting.com"
	}
  ],
  "repositories": [
    {
      "url": "https://github.com/everaccounting/phpcs-composer.git",
      "type": "git"
    }
  ],
  "require": {
    "php": ">=5.6"
  },
  "autoload": {
    "psr-4": {
      "EverAccounting\\": "src/"
    }
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.4",
    "byteever/phpcs-composer": "dev-master",
    "phpunit/phpunit": "^6.5"
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    },
    "sort-packages": true
  },
  "scripts": {
    "post-install-cmd": [
      "sh ./bin/package-update.sh"
    ],
    "makepot-audit": [
      "wp --allow-root i18n make-pot . --exclude=\".github,.wordpress-org,bin,sample-data,node_modules,tests\" --slug=wp_ever_accounting"
    ],
    "makepot": [
      "@makepot-audit --skip-audit"
    ],
    "pre-commit": [
      "@phpcs"
    ],
    "phpcs": "phpcs -s -p .",
    "phpcbf": "phpcbf -p .",
    "test": "phpunit"
  },
  "extra": {
    "scripts-description": {
      "test": "Run unit tests",
      "phpcs": "Analyze code against the WordPress coding standards with PHP_CodeSniffer",
      "phpcbf": "Fix coding standards warnings/errors automatically with PHP Code Beautifier",
      "makepot-audit": "Generate i18n/languages/wp_ever_accounting.pot file and run audit",
      "makepot": "Generate i18n/languages/wp_ever_accounting.pot file"
    }
  }
}
