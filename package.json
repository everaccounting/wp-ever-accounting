{
  "name": "wp-ever-accounting",
  "version": "1.1.5",
  "private": true,
  "description": "The Best WordPress Accounting Plugin ever made!",
  "author": "Ever Accounting",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "plugin",
    "accounting",
    "invoice"
  ],
  "homepage": "https://www.wpeveraccounting.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/everaccounting/wp-ever-accounting.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@automattic/webpack-rtl-plugin": "^6.0.0",
    "@babel/plugin-transform-runtime": "^7.23.2",
    "@wordpress/babel-preset-default": "^7.28.0",
    "@wordpress/browserslist-config": "^5.27.0",
    "@wordpress/eslint-plugin": "^17.1.0",
    "@wordpress/prettier-config": "^3.1.0",
    "@wordpress/scripts": "^26.15.0",
    "@wordpress/stylelint-config": "^21.27.0",
    "autoprefixer": "^10.4.16",
    "browser-sync-webpack-plugin": "^2.3.0",
    "cssnano": "^6.0.1",
    "glob": "^10.3.10",
    "lerna": "^7.4.1",
    "moment-timezone-data-webpack-plugin": "^1.5.1",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.3.3"
  },
  "dependencies": {
    "@eac/components": "file:packages/components",
    "@eac/data": "file:packages/data",
    "react-router-dom": "^6.17.0"
  },
  "scripts": {
    "build": "wp-scripts build",
    "start": "wp-scripts start",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint '**/*.scss'",
    "lint:css-fix": "stylelint '**/*.scss' --fix --ip 'storybook/wordpress'",
    "lint:js": "wp-scripts lint-js ./packages ./client --ext=js,ts,tsx",
    "lint:js:packages": "wp-scripts lint-js ./packages --ext=js,ts,tsx",
    "lint:js:client": "wp-scripts lint-js ./client --ext=js,ts,tsx",
    "lint:js-fix": "npm run lint:js --fix --ext=js,ts,tsx",
    "reformat-files": "wp-scripts format-js -- --ignore-path .eslintignore",
    "packages-update": "wp-scripts packages-update && lerna run packages-update"
  }
}
