{
	"name": "wp-ever-accounting",
	"title": "WP Ever Accounting",
	"version": "1.1.2",
	"description": "The Best WordPress Accounting Plugin ever made!",
	"author": {
		"name": "Sultan Nasir Uddin",
		"email": "sultan@byteever.com",
		"url": "https://www.byteever.com"
	},
	"license": "GPL-2.0-or-later",
	"keywords": [],
	"homepage": "https://www.wpeveraccounting.com",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/everaccounting/wp-ever-accounting.git"
	},
	"bugs": {
		"url": "https://github.com/everaccounting/wp-ever-accounting/issues"
	},
	"engines": {
		"node": ">=12.0.0"
	},
	"dependencies": {
		"vue": "^3.2.31",
		"vue-template-compiler": "^2.6.14"
	},
	"devDependencies": {
		"@babel/core": "^7.17.8",
		"@babel/preset-env": "^7.16.11",
		"@vitejs/plugin-vue": "^2.2.4",
		"@vue/cli-plugin-babel": "^5.0.3",
		"@vue/cli-service": "^5.0.3",
		"@vue/compiler-sfc": "^3.2.31",
		"babel-loader": "^8.2.3",
		"concurrently": "^7.0.0",
		"copy-webpack-plugin": "^10.2.4",
		"cross-env": "^7.0.3",
		"vue-loader": "^17.0.0",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	},
	"scripts": {
		"build": "NODE_ENV=production webpack",
		"start": "NODE_ENV=develop webpack",
		"watch": "NODE_ENV=develop webpack --watch"
	},
	"husky": {
		"hooks": {
			"post-merge": "./bin/post-merge.sh",
			"pre-commit": "lint-staged",
			"pre-push": "./bin/pre-push.sh"
		}
	},
	"lint-staged": {
		"*.php": [
			"php -d display_errors=1 -l",
			"./vendor/bin/phpcs --extensions=php --warning-severity=8 -s"
		],
		"*.scss": [
			"stylelint --syntax=scss --fix"
		],
		"*.{js,jsx}": [
			"byteever-scripts format-js",
			"byteever-scripts lint-js"
		],
		"*.js": [
			"eslint --fix"
		]
	},
	"files": [
		"assets/**/*.{js,scss,php}",
		"includes/**/*.php",
		"i18n/**/*.json",
		"license.txt",
		"wp-ever-accounting.php"
	],
	"devURL": "http://accounting.test"
}
