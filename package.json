{
  "name": "wp-ever-accounting",
  "title": "WP Ever Accounting",
  "version": "1.1.0",
  "description": "The Best WordPress Accounting Plugin ever made!",
  "keywords": [],
  "homepage": "https://www.pluginever.com",
  "author": {
    "name": "pluginever",
    "email": "support@pluginever.com",
    "url": "https://www.pluginever.com"
  },
  "main": "index.js",
  "dependencies": {
    "@wordpress/library-export-default-webpack-plugin": "^2.0.1",
    "blockui": "^1.0.0",
    "chart.js": "^2.9.4",
    "chartjs-plugin-labels": "^1.1.0",
    "classnames": "^2.2.6",
    "equivalent-key-map": "^0.2.2",
    "inputmask": "^5.0.5",
    "print-this": "^1.15.1",
    "rememo": "^3.0.0",
    "select2": "^4.1.0-rc.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.17",
    "@wordpress/babel-plugin-makepot": "^4.0.1",
    "@wordpress/custom-templated-path-webpack-plugin": "^2.0.1",
    "@wordpress/eslint-plugin": "^8.0.2",
    "@wordpress/scripts": "^13.0.3",
    "browser-sync": "^2.26.14",
    "browser-sync-webpack-plugin": "^2.3.0",
    "copy-webpack-plugin": "^6.2.1",
    "cross-env": "^7.0.3",
    "eslint-webpack-plugin": "^2.5.2",
    "grunt-checktextdomain": "^1.0.1",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-compress": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-wp-i18n": "^1.0.3",
    "grunt-wp-readme-to-markdown": "^2.0.1",
    "husky": "4.3.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "jsdoc": "~3.6.3",
    "lint-staged": "^10.5.4",
    "matchdep": "^2.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "prettier": "^2.2.1",
    "stylelint-webpack-plugin": "^2.1.1",
    "uglify-es": "^3.3.9",
    "webpack-fix-style-only-entries": "^0.6.1",
    "webpack-merge": "^5.7.3",
    "webpack-remove-debug": "^0.1.0",
    "webpack-rtl-plugin": "^2.0.0",
    "webpackbar": "^5.0.0-3",
    "wp-hookdoc": "^0.2.0"
  },
  "scripts": {
    "start": "composer install && npm run watch",
    "watch": "cross-env NODE_ENV=develop wp-scripts start",
    "build": "NODE_ENV=production wp-scripts build && npm run i18n",
    "prerelease": "npm install && composer install --no-dev -o",
    "release": "npm run build && grunt zip",
    "i18n": "npm run -s i18n:pot && npm run -s i18n:build",
    "i18n:pot": "grunt i18n",
    "i18n:build": "php bin/combine-pot-files.php languages/wp-ever-accounting.po languages/wp-ever-accounting.pot",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:php-fix && npm run lint:php",
    "lint:js": "wp-scripts lint-js  --fix",
    "lint:css": "wp-scripts lint-style --fix",
    "lint:php": "./vendor/bin/phpcs --standard=phpcs.xml $(git ls-files | grep .php$)",
    "lint:php-fix": "./vendor/bin/phpcbf --standard=phpcs.xml $(git ls-files | grep .php$)",
    "lint:pkg-json": "wp-scripts lint-pkg-json",
    "packages-update": "wp-scripts packages-update",
    "clean": "rimraf ./dist",
    "build:docs": "rm -rf hookdocs/ && jsdoc -c hookdoc-conf.json"
  },
  "husky": {
    "hooks": {
      "post-merge": "./bin/post-merge.sh",
      "pre-commit": "lint-staged",
      "pre-push": "./bin/pre-push.sh"
    }
  },
  "lint-staged": {
    "*.php": [
      "php -d display_errors=1 -l",
      "./vendor/bin/phpcs --extensions=php --warning-severity=8 -s",
      "git add"
    ],
    "*.scss": [
      "stylelint --syntax=scss --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "wp-scripts format-js",
      "wp-scripts lint-js",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
